<h1 align = "center", class = "page-headers"> List of All Bloggers </h1>
<% @users.each do |user| %>
    <div align = "center">
        <ul class = "listing">
            <div class = "row">
                <div class = "well col-md-4 col-md-offset-4">
                    <li class = "article-title"> <%= link_to gravatar_for(user), user_path(user) %> </li>
                    <li class = "article-title"> <%= link_to user.username, user_path(user) %>
                    <li><small><%= pluralize(user.articles.count, "article" ) if user.articles %></small> </li>
                </div>
            </div>
        </div>
    </div>
<% end %>