<div class = "well col-xs-8 col-xs-offset-2">
    <h2 align = "center", id = show-title> Title: <%= @article.title %></h2>
    <hr>
    <%= simple_format(@article.description) %>
    <hr>
    <div class = "article-actions">
            <%= link_to 'Edit this artcile', edit_article_path(@article), class: "btn btn-xs btn-primary"%>
            <%= link_to 'View all articles', article_path, class: "btn btn-xs btn-success" %>
            <%= link_to 'Delete', article_path(@article), method: :delete, 
                data: {confirm: "Are you sure you want to delete this artcile?"}, class: "btn btn-xs btn-danger" %>
    </div>
</div>